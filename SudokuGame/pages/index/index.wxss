.clock {
  margin: 10rpx 0;
  text-align: center;
}

.clock .share-btn {
  display: inline;
  background: none;
  outline: none;
  border: 2rpx dashed #2ebf76;
  font-size: 25rpx;
  color: #2ebf76;
  margin-left: 80rpx;
  padding: 7rpx 15rpx;
}

.to-red-btn {
  display: block;
  width: 90%;
  outline: none;
  border: none;
  font-size: 30rpx;
  margin: 10rpx auto;
  text-align: center;
  color: #fff;
  border-radius: 100rpx;
  background: linear-gradient(to right, #ff6034, #ee0a24);
}


.email {
  color: #999;
  font-size: 20rpx;
  margin-top: 10rpx;
}

.timing {
  display: inline-block;
  width: 150rpx;
  text-align: left;
}

.seconds {
  color: #2ebf76;
}

.index-mask {
  background-color: #fff;
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 10000;
}

.index-mask.show {
  display: block;
}

.index-mask.hide {
  display: none;
}

.index-mask image {
  width: 500rpx;
  height: 500rpx;
  display: block;
  margin: 0 auto;
}

.index-mask text {
  display: block;
  text-align: center;
  color: #2c3e50;
}

.index-mask .tips {
  color: #dda52d;
  margin-top: 30rpx;
}

.index-mask button {
  background-color: #2ebf76;
  color: #fff;
  font-size: 35rpx;
  width: 80%;
  margin-top: 60rpx;
}

.rows {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
}

.cols {
  width: 75rpx;
  height: 75rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  /* border: 1px solid #000; */
}

.row_g_top:first-child {
  border-top: 2px solid #000;
}

.row_g_bottom {
  border-bottom: 2px solid #000;
}

.row_g_middle, .row_g_bottom {
  border-top: 1px solid #000;
}

.col_g_left {
  border-left: 2px solid #000;
}

.col_g_right:last-child {
  border-right: 2px solid #000;
}

.col_g_center, .col_g_right {
  border-left: 1px solid #000;
}

.empty {
  background-color: #fff;
}

.fixed {
  background-color: #eee;
}

.white {
  color: #fff;
}

.white.error {
  background-color: lightpink;
  color: lightpink;
}

.black {
  color: #000;
}

.black.error {
  background-color: lightpink;
}

.mark1 {
  background-color: lightgreen;
  color: lightgreen;
}

.mark2 {
  background-color: lightgoldenrodyellow;
  color: lightgoldenrodyellow;
}
.ad-wrapper {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  align-items: center;
  justify-content: center;
}
.dashboard {
  margin-top: 10rpx;
  display: flex;
  width: 100%;
  flex-direction: row;
  justify-content: space-around;
}

.dashboard button {
  background-color: #2ebf76;
  color: #fff;
  font-size: 30rpx;
  line-height: 2;
}

.popupNumbers {
  position: absolute;
  border: 1px solid #000;
  z-index: 10000;
  background: #fff;
  margin-top: 30rpx;
  margin-left: 30rpx;
}

.popupNumbers.show {
  display: block;
}

.popupNumbers.hide {
  display: none;
}

.popupNumbers text {
  width: 75rpx;
  height: 75rpx;
  display: inline-block;
  text-align: center;
  line-height: 75rpx;
  border: 1px solid #000;
}

/* 如果要底部为3个按钮则去掉下面这行样式 */

.popupNumbers .white {
  width: 98%;
  color: black;
  background-color: lightgoldenrodyellow;
}

.footer {
  position: fixed;
  bottom: 0;
  text-align: center;
  margin: 0 auto;
  left: 0;
  right: 0;
  font-size: 30rpx;
  color: #999;
}
